@model WebCursoMVC.Models.Curso
@{
    ViewBag.Title = "Agregar";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Agregar</title>
    <meta charset="utf-8" />
</head>
<body>

    <h1>Agregar Curso</h1>

    <table>

        @using (Html.BeginForm())
        {
            <tr><td>Nombre</td><td>@Html.TextBoxFor(C=>C.Nombre)</td></tr>
            <tr><td>Aula</td><td>@Html.TextBoxFor(C=>C.Aula)</td></tr>
            <tr><td><input type="submit" value="Agregar" /></td></tr>
        }

    </table>

</body>
</html>

